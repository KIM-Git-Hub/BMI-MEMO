<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bmi_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/underWight"
        android:src="@drawable/bmi_1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bmi_2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/normalWeight"
        android:src="@drawable/bmi_2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bmi_3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/obesity"
        android:src="@drawable/bmi_3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bmi_4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/obesity2"
        android:src="@drawable/bmi_4"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bmi_5"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/obesity3"
        android:src="@drawable/bmi_5"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bmi_6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/obesity4"
        android:src="@drawable/bmi_6"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/bmi"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/bracketS"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bmiNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="testNum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/bracketE"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/addMemoButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/memo" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/allBmi"
        android:src="@drawable/bmi_level" />


</LinearLayout>