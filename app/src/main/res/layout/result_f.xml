<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bmi_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/bmi_1"
        android:visibility="gone"
        android:contentDescription="@string/underWight" />
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/bmi_2"
        android:layout_height="100dp"
        android:src="@drawable/bmi_2"
        android:visibility="gone"
        android:contentDescription = "@string/normalWeight" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/bmi_3"
        android:src="@drawable/bmi_3"
        android:visibility="gone"
        android:contentDescription="@string/overWeight" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/bmi_4"
        android:src="@drawable/bmi_4"
        android:visibility="gone"
        android:contentDescription="@string/obesity" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/bmi_5"
        android:src="@drawable/bmi_5"
        android:visibility="gone"
        android:contentDescription="@string/superObesity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/bmi"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_height="wrap_content"
          android:text="@string/bracketS"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/bmiNum"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            tools:text="testNum" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:text="@string/bracketE"/>


    </LinearLayout>

    <Button
        android:id="@+id/addMemoButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/memo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/bmi_level"
        android:contentDescription="@string/allBmi" />


</LinearLayout>